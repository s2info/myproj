<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">
    
    <!-- 환경설정 기본정보를 globals.properties 에서 참조하도록 propertyConfigurer 설정  -->
    <bean id="propertyConfigurer"
        class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="locations">
            <list>
                <value>classpath:/sdiag.context/props/globals.properties</value>
                <!-- value>file:/product/jeus/egovProps/globals.properties</value-->
            </list>
        </property>
    </bean>
    
    <!-- 
    <bean id="transactionManager" class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
	   <property name="dataSource" ref="dataSource"/>
	</bean>
	-->
    
    <!-- datasource 설정(propertyConfigurer 활용) -->
    <alias name="dataSource" alias="dataSource" />
    <!-- 데이터 베이스 1 -->
   <!-- <bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource" destroy-method="close"> --> 
   <bean id="dataSource" class="sdiag.util.CryptDataSource" destroy-method="close"> 
        <property name="driverClassName" value="${Globals.DriverClassName1}"/>
        <property name="url" value="${Globals.Url1}" />
        <property name="username" value="${Globals.UN1}"/>
        <property name="password" value="${Globals.PW1}"/>
        <property name="defaultAutoCommit" value="true"/>
        <property name="InitialSize" value="10"/>
        <property name="maxActive" value="30"/>
        <property name="maxIdle" value="10"/>
        <property name="minIdle" value="5"/>
        <property name="maxWait" value="10000"/>
        <property name="removeAbandonedTimeout" value="60"/>
        <property name="removeAbandoned" value="true"/>
    </bean> 
    
    <alias name="dataSource2" alias="dataSource2" />
    <!-- 데이터 베이스 2-->
    <bean id="dataSource2" class="sdiag.util.CryptDataSourceSdiag" destroy-method="close">
        <property name="driverClassName" value="${Globals.DriverClassName1}"/>
        <property name="url" value="${Globals.Url2}" />
        <property name="username" value="${Globals.UN2}"/>
        <property name="password" value="${Globals.PW2}"/>
        <property name="defaultAutoCommit" value="true"/>
        <property name="InitialSize" value="10"/>
        <property name="maxActive" value="30"/>
        <property name="maxIdle" value="10"/>
        <property name="minIdle" value="5"/>
        <property name="maxWait" value="10000"/>
        <property name="removeAbandonedTimeout" value="60"/>
        <property name="removeAbandoned" value="true"/>
    </bean>    

</beans>
