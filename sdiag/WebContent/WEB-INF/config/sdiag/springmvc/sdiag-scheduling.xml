<!-- 자동제재 및 소명처리 -->
	<bean name="autoSanctBatchJob" class="org.springframework.scheduling.quartz.JobDetailFactoryBean">
		<property name="jobClass" value="sdiag.bat.controller.AutoSanctController" />
		<property name="durability" value="true" />
		<property name="jobDataAsMap">
			<map>
				<entry key="AutoSanctService" value-ref="AutoSanctService"></entry>
				<entry key="SanctionService" value-ref="SanctionService"></entry>
				<entry key="commonService" value-ref="commonService"></entry>
			</map>
		</property>		
	</bean>
	
	
 	<bean id="autoSanctBatchTrigger" class="org.springframework.scheduling.quartz.CronTriggerFactoryBean"> 
 		<property name="jobDetail" ref="autoSanctBatchJob" /> 
 		<property name="cronExpression" value="0 0/30 * * * ?" />
 		<!-- <property name="cronExpression" value="0 0/30 * * * ?" /> --> 
 	</bean>	
 	<!-- 자동제재 및 소명처리 -->	
 	
 	<!-- 일일보고서 -->
 	<bean name="autoReportBatchJob" class="org.springframework.scheduling.quartz.JobDetailFactoryBean">
		<property name="jobClass" value="sdiag.bat.controller.AutoReportController" />
		<property name="durability" value="true" />
		<property name="jobDataAsMap">
			<map>
				<entry key="AutoSanctService" value-ref="AutoSanctService"></entry>
				<entry key="commonService" value-ref="commonService"></entry>
			</map>
		</property>		
	</bean>
 	
 	<bean id="autoReportBatchTrigger" class="org.springframework.scheduling.quartz.CronTriggerFactoryBean"> 
 		<property name="jobDetail" ref="autoReportBatchJob" /> 
 		<property name="cronExpression" value="0 0/30 * * * ?" />
 	</bean>	 	
 	<!-- 일일보고서 -->
 	
 	<!-- 자동소명 배치 처리 -->
 	<bean name="autoExplainBatchJob" class="org.springframework.scheduling.quartz.JobDetailFactoryBean">
