<!-- D:\myproj\pom.xml -->
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>local.wrap</groupId>
  <artifactId>myproj</artifactId>
  <version>1.0.0</version>
  <packaging>jar</packaging>

  <!-- 표준이 아니면 소스 디렉터리 직접 지정 -->
  <build>
    <sourceDirectory>sdiag/src</sourceDirectory>          <!-- 실제 .java 경로로 교체 -->
    <resources>
      <resource><directory>sdiag/resources</directory></resource> <!-- 없으면 삭제 -->
    </resources>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.11.0</version>
        <configuration>
          <source>1.8</source>     <!-- 프로젝트 JDK에 맞춰 1.8/11/17 등 -->
          <target>1.8</target>
          <encoding>UTF-8</encoding>
        </configuration>
      </plugin>
    </plugins>
  </build>

  <dependencies>
    <!-- 필요한 라이브러리 최소 추가. 예: Servlet API -->
    <dependency>
      <groupId>javax.servlet</groupId><artifactId>javax.servlet-api</artifactId><version>4.0.1</version><scope>provided</scope>
    </dependency>
    <!-- 사용 중인 라이브러리들을 실제로 추가해야 빌드 성공 -->
  </dependencies>
</project>
